<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.DescActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:elevation="@dimen/len_2"
        android:outlineProvider="bounds"
        tools:targetApi="lollipop">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/statusBarSize"
            android:paddingLeft="@dimen/len_4"
            android:paddingRight="@dimen/len_4">

            <ImageView
                android:id="@+id/im_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="@dimen/len_20"
                android:layout_marginTop="@dimen/len_10"
                android:background="@drawable/icon_back"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/app_name" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="签到详情"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_380"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/loginbg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/im_done"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/ic_done_1" />

            <TextView
                android:id="@+id/tv_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_8"
                android:text="@string/label_sign_success"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/len_32"
                android:layout_height="@dimen/len_32"
                android:layout_gravity="center"
                android:background="@drawable/ic_dian"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/app_name" />
            <TextView
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:text="姓名:"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_marginStart="@dimen/len_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="iwen大大怪"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/len_32"
                android:layout_height="@dimen/len_32"
                android:layout_gravity="center"
                android:background="@drawable/ic_dian"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/app_name" />
            <TextView
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:text="工号:"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_workIb"
                android:layout_marginStart="@dimen/len_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10010001"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/len_32"
                android:layout_height="@dimen/len_32"
                android:layout_gravity="center"
                android:background="@drawable/ic_dian"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/app_name" />
            <TextView
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:text="部门:"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_department"
                android:layout_marginStart="@dimen/len_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="市场部"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/len_32"
                android:layout_height="@dimen/len_32"
                android:layout_gravity="center"
                android:background="@drawable/ic_dian"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/app_name" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到时间:"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/tv_date"
                android:layout_marginStart="@dimen/len_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020-12-17 20:00"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/len_32"
                android:layout_height="@dimen/len_32"
                android:layout_gravity="center"
                android:background="@drawable/ic_dian"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/app_name" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签到位置:"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_adder"
                android:layout_marginStart="@dimen/len_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中国重庆荣昌区西南大学荣昌校区"
                android:maxLines="1"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/len_32"
                android:layout_height="@dimen/len_32"
                android:layout_gravity="center"
                android:background="@drawable/ic_dian"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/app_name" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="附加信息:"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_marginStart="@dimen/len_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="晚间温度调查"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="@dimen/len_32"
                android:layout_height="@dimen/len_32"
                android:layout_gravity="center"
                android:background="@drawable/ic_dian"
                android:backgroundTint="@color/trans"
                android:contentDescription="@string/app_name" />
            <TextView
                android:id="@+id/tv_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="37.2"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>