<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#43BFBEBE"
    tools:context=".activities.TakePictureActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:elevation="@dimen/len_2"
        android:outlineProvider="bounds"
        tools:targetApi="lollipop">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/statusBarSize"
            android:paddingLeft="@dimen/len_4"
            android:paddingRight="@dimen/len_4">

            <ImageView
                android:id="@+id/im_sign_back"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="@dimen/len_12"
                android:background="@drawable/icon_back"
                android:backgroundTint="@color/white" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="照片采集" />

        </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginEnd="@dimen/dp_8"
        android:backgroundTint="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_6"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/len_10"
                    android:text="签到信息"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_6"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/len_32"
                    android:layout_height="@dimen/len_32"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_dian"
                    android:backgroundTint="@color/grey"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/label_name"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/len_10"
                    android:text="iwen大大怪"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_6"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/len_32"
                    android:layout_height="@dimen/len_32"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_dian"
                    android:backgroundTint="@color/grey"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="工号:"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_workIb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/len_10"
                    android:text="10010001"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_6"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/len_32"
                    android:layout_height="@dimen/len_32"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_dian"
                    android:backgroundTint="@color/grey"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="部门:"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/len_10"
                    android:text="市场部"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_6"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="相片预览"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="normal" />
                <ImageView
                    android:id="@+id/im_take_picture"
                    android:layout_width="@dimen/dp_100"
                    android:layout_height="@dimen/dp_100"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/grey"
                    android:src="@drawable/ic_take"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginBottom="@dimen/len_20"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_20"
        android:gravity="center"
        android:orientation="horizontal">

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_take"

            android:layout_width="@dimen/len_128"
            android:layout_height="@dimen/len_44"
            android:layout_gravity="center"
            android:background="@drawable/sel_btn_bg_black_alpha_44"
            android:gravity="center"
            android:text="拍照"
            android:textColor="@color/white"
            app:gTouchColor="@color/qqgreen"
            app:gTouchCornerRadius="@dimen/font_18"
            app:gTouchEffect="ripple" />

        <net.qiujuer.genius.ui.widget.Button
            android:id="@+id/btn_take_submit"
            android:layout_width="@dimen/len_128"
            android:layout_height="@dimen/len_44"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/len_20"
            android:background="@drawable/sel_btn_bg_black_alpha_44"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            app:gTouchColor="@color/qqgreen"
            app:gTouchCornerRadius="@dimen/font_18"
            app:gTouchEffect="ripple" />

    </LinearLayout>

</LinearLayout>