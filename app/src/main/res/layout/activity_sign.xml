<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/lay_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SignActivity"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:elevation="@dimen/len_2"
        android:outlineProvider="bounds"
        tools:targetApi="lollipop">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/statusBarSize"
            android:paddingLeft="@dimen/len_4"
            android:paddingRight="@dimen/len_4">

            <com.example.iwen.common.widget.PortraitView
                android:id="@+id/im_portrait"
                android:layout_width="@dimen/len_40"
                android:layout_height="@dimen/len_40"
                android:layout_margin="@dimen/len_4"
                android:foreground="@drawable/ic_touch_menu"
                android:padding="@dimen/len_4"
                android:src="@drawable/default_portrait" />

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/app_name" />

            <ImageView
                android:id="@+id/im_search"
                android:layout_width="@dimen/len_40"
                android:layout_height="@dimen/len_40"
                android:layout_gravity="end|center_vertical"
                android:layout_margin="@dimen/len_4"
                android:contentDescription="@string/app_name"
                android:foreground="@drawable/ic_touch_menu"
                android:padding="@dimen/len_10"
                android:src="@drawable/ic_search"
                app:tint="?attr/toolbarMenuIconColor" />

        </FrameLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/navIconTintLight">


        <TextView
            android:id="@+id/tx_address"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tx_sign_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:layout_marginTop="@dimen/len_6"
                android:layout_marginEnd="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_6"
                android:gravity="center"
                android:text="2020查寝"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/font_18"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tx_sign_send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:layout_marginTop="@dimen/len_6"
                android:layout_marginEnd="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_6"
                android:text="发起人: iwen大大怪"
                android:textColor="@color/textPrimary" />

            <TextView
                android:id="@+id/tx_sign_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/len_16"
                android:layout_marginTop="@dimen/len_6"
                android:layout_marginEnd="@dimen/len_16"
                android:layout_marginBottom="@dimen/len_6"
                android:text="签到时间: 2020.11.18 18:00-22:00"
                android:textColor="@color/textPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginStart="@dimen/len_8"
                android:layout_marginTop="@dimen/len_2"
                android:layout_marginEnd="@dimen/len_8"
                android:layout_marginBottom="@dimen/len_2"
                android:background="@color/black_alpha_80" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.88">

            <net.qiujuer.genius.ui.widget.FloatActionButton
                android:id="@+id/btn_action_sign_in"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="@dimen/len_28"
                android:src="@drawable/ic_sign"
                android:tint="@color/white"
                app:gBackgroundColor="@color/cornflowerblue"
                app:layout_anchorGravity="bottom|center" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取位置"
                android:textColor="@color/textPrimary" />
        </LinearLayout>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="110dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="445dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>